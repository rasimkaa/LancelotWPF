<Window x:Class="LancelotWPF.StoreDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Магазин" Width="440" Height="380"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgPanel}"
        WindowStyle="None" AllowsTransparency="True"
        ResizeMode="NoResize">
    <Border BorderBrush="{StaticResource GoldDim}" BorderThickness="1" CornerRadius="8">
        <Grid Margin="30,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,22">
                <TextBlock Text="Новый магазин"
                           Foreground="{StaticResource GoldBrush}"
                           FontSize="18" FontWeight="Bold" FontFamily="Palatino Linotype"/>
                <Rectangle Height="1" Fill="{StaticResource GoldDim}" Margin="0,10,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Название" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                <TextBox x:Name="TbName" Style="{StaticResource GoldTextBox}" Margin="0,0,0,16"/>

                <TextBlock Text="Город" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                <TextBox x:Name="TbCity" Style="{StaticResource GoldTextBox}" Margin="0,0,0,16"/>

                <TextBlock Text="Адрес" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                <TextBox x:Name="TbAddress" Style="{StaticResource GoldTextBox}" Margin="0,0,0,16"/>

                <TextBlock Text="Тип магазина" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                <ComboBox x:Name="CbType" Style="{StaticResource GoldCombo}">
                    <ComboBoxItem Content="Фирменный"/>
                    <ComboBoxItem Content="Франшиза"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Отмена" Style="{StaticResource GhostBtn}" Width="100"
                        Click="BtnCancel_Click" Margin="0,0,10,0"/>
                <Button Content="Сохранить" Style="{StaticResource GoldBtn}" Width="100"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
