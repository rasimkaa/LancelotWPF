<Application x:Class="LancelotWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- ══════════════════════════════════════════════
             ЦВЕТОВАЯ ПАЛИТРА  (тёмно-золотая роскошь)
        ══════════════════════════════════════════════ -->
        <Color x:Key="C_BgDeep">#0F0F0F</Color>
        <Color x:Key="C_BgPanel">#1A1A1A</Color>
        <Color x:Key="C_BgCard">#222222</Color>
        <Color x:Key="C_Gold">#C9A84C</Color>
        <Color x:Key="C_GoldLight">#E8C97A</Color>
        <Color x:Key="C_GoldDim">#7A6030</Color>
        <Color x:Key="C_TextPrimary">#F0EDE8</Color>
        <Color x:Key="C_TextSecondary">#8A8580</Color>
        <Color x:Key="C_Accent">#D4AF5A</Color>
        <Color x:Key="C_Border">#2E2E2E</Color>
        <Color x:Key="C_Hover">#2C2A25</Color>
        <Color x:Key="C_Red">#C0392B</Color>

        <SolidColorBrush x:Key="BgDeep"       Color="{StaticResource C_BgDeep}"/>
        <SolidColorBrush x:Key="BgPanel"      Color="{StaticResource C_BgPanel}"/>
        <SolidColorBrush x:Key="BgCard"       Color="{StaticResource C_BgCard}"/>
        <SolidColorBrush x:Key="GoldBrush"    Color="{StaticResource C_Gold}"/>
        <SolidColorBrush x:Key="GoldLight"    Color="{StaticResource C_GoldLight}"/>
        <SolidColorBrush x:Key="GoldDim"      Color="{StaticResource C_GoldDim}"/>
        <SolidColorBrush x:Key="TextPrimary"  Color="{StaticResource C_TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource C_TextSecondary}"/>
        <SolidColorBrush x:Key="AccentBrush"  Color="{StaticResource C_Accent}"/>
        <SolidColorBrush x:Key="BorderBrush2" Color="{StaticResource C_Border}"/>
        <SolidColorBrush x:Key="HoverBrush"   Color="{StaticResource C_Hover}"/>
        <SolidColorBrush x:Key="RedBrush"     Color="{StaticResource C_Red}"/>

        <!-- ══════════════════════════════════════════════
             SCROLLBAR
        ══════════════════════════════════════════════ -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border CornerRadius="3" Background="{StaticResource GoldDim}" Margin="2"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- ══════════════════════════════════════════════
             TEXTBOX
        ══════════════════════════════════════════════ -->
        <Style TargetType="TextBox" x:Key="GoldTextBox">
            <Setter Property="Background"   Value="#1E1E1E"/>
            <Setter Property="Foreground"   Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush"  Value="{StaticResource GoldDim}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding"      Value="8,6"/>
            <Setter Property="FontSize"     Value="13"/>
            <Setter Property="CaretBrush"   Value="{StaticResource GoldBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4,4,0,0">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ══════════════════════════════════════════════
     COMBOBOX
══════════════════════════════════════════════ -->
        <Style TargetType="ComboBox" x:Key="GoldCombo">
            <Setter Property="Background"        Value="#1E1E1E"/>
            <Setter Property="Foreground"        Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush"       Value="{StaticResource GoldDim}"/>
            <Setter Property="BorderThickness"   Value="0,0,0,1"/>
            <Setter Property="Padding"           Value="8,6"/>
            <Setter Property="FontSize"          Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid x:Name="templateRoot">
                            <ToggleButton x:Name="toggleButton"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  Focusable="False" ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4,4,0,0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="26"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Grid.Column="1" Data="M0,0 L4,5 L8,0"
                                              Stroke="{StaticResource GoldBrush}" StrokeThickness="1.5"
                                              VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="contentPresenter"
                        Content="{TemplateBinding SelectionBoxItem}"
                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                        ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                        Margin="8,6,30,6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        IsHitTestVisible="False"/>
                            <Popup x:Name="PART_Popup"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           Placement="Bottom"
                           PlacementTarget="{Binding ElementName=templateRoot}"
                           MinWidth="{Binding ActualWidth, ElementName=templateRoot}">
                                <Border Background="#252525" BorderBrush="{StaticResource GoldDim}"
                                BorderThickness="1" CornerRadius="0,0,4,4"
                                MaxHeight="200">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="toggleButton" Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background"  Value="Transparent"/>
                    <Setter Property="Foreground"  Value="{StaticResource TextPrimary}"/>
                    <Setter Property="Padding"     Value="10,7"/>
                    <Setter Property="FontSize"    Value="13"/>
                    <Style.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                            <Setter Property="Foreground" Value="{StaticResource GoldBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Style.Resources>
        </Style>

        <!-- ══════════════════════════════════════════════
             КНОПКИ
        ══════════════════════════════════════════════ -->
        <Style TargetType="Button" x:Key="GoldBtn">
            <Setter Property="Background"    Value="{StaticResource GoldBrush}"/>
            <Setter Property="Foreground"    Value="#0F0F0F"/>
            <Setter Property="FontWeight"    Value="SemiBold"/>
            <Setter Property="FontSize"      Value="13"/>
            <Setter Property="Padding"       Value="20,9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor"        Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource GoldLight}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource GoldDim}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="GhostBtn">
            <Setter Property="Background"    Value="Transparent"/>
            <Setter Property="Foreground"    Value="{StaticResource GoldBrush}"/>
            <Setter Property="FontWeight"    Value="SemiBold"/>
            <Setter Property="FontSize"      Value="13"/>
            <Setter Property="Padding"       Value="20,9"/>
            <Setter Property="BorderBrush"   Value="{StaticResource GoldDim}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor"        Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                                <Setter Property="BorderBrush" Value="{StaticResource GoldBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="RedBtn">
            <Setter Property="Background"    Value="Transparent"/>
            <Setter Property="Foreground"    Value="{StaticResource RedBrush}"/>
            <Setter Property="FontWeight"    Value="SemiBold"/>
            <Setter Property="FontSize"      Value="12"/>
            <Setter Property="Padding"       Value="14,7"/>
            <Setter Property="BorderBrush"   Value="{StaticResource RedBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor"        Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3C1010"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ══════════════════════════════════════════════
             DATAGRID
        ══════════════════════════════════════════════ -->
        <Style TargetType="DataGrid" x:Key="GoldGrid">
            <Setter Property="Background"          Value="Transparent"/>
            <Setter Property="Foreground"          Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness"     Value="0"/>
            <Setter Property="RowBackground"       Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#1D1D1D"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#282828"/>
            <Setter Property="ColumnHeaderHeight"  Value="38"/>
            <Setter Property="RowHeight"           Value="38"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows"      Value="False"/>
            <Setter Property="SelectionMode"       Value="Single"/>
            <Setter Property="FontSize"            Value="13"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background"    Value="#161616"/>
            <Setter Property="Foreground"    Value="{StaticResource GoldBrush}"/>
            <Setter Property="FontWeight"    Value="SemiBold"/>
            <Setter Property="FontSize"      Value="12"/>
            <Setter Property="Padding"       Value="12,0"/>
            <Setter Property="BorderBrush"   Value="#282828"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Height"        Value="38"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#2A2518"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="Padding"       Value="12,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground"    Value="{StaticResource TextPrimary}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource GoldLight}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ══════════════════════════════════════════════
             NAV BUTTON
        ══════════════════════════════════════════════ -->
        <Style TargetType="RadioButton" x:Key="NavBtn">
            <Setter Property="Background"    Value="Transparent"/>
            <Setter Property="Foreground"    Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize"      Value="13"/>
            <Setter Property="Padding"       Value="16,12"/>
            <Setter Property="Cursor"        Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="bg" Background="Transparent"
                                BorderThickness="3,0,0,0" BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock x:Name="icon" Text="{TemplateBinding Tag}"
                                           FontSize="16" Width="22" VerticalAlignment="Center"/>
                                <TextBlock x:Name="lbl" Text="{TemplateBinding Content}"
                                           VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="bg"  Property="Background"    Value="{StaticResource HoverBrush}"/>
                                <Setter TargetName="bg"  Property="BorderBrush"   Value="{StaticResource GoldBrush}"/>
                                <Setter TargetName="lbl" Property="Foreground"    Value="{StaticResource GoldBrush}"/>
                                <Setter TargetName="icon" Property="Foreground"   Value="{StaticResource GoldBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg"  Property="Background"    Value="{StaticResource HoverBrush}"/>
                                <Setter TargetName="lbl" Property="Foreground"    Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
