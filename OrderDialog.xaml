<Window x:Class="LancelotWPF.OrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый заказ" Width="540" Height="560"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgPanel}"
        WindowStyle="None" AllowsTransparency="True"
        ResizeMode="NoResize">
    <Border BorderBrush="{StaticResource GoldDim}" BorderThickness="1" CornerRadius="8">
        <Grid Margin="30,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,22">
                <TextBlock Text="Новый заказ"
                           Foreground="{StaticResource GoldBrush}"
                           FontSize="18" FontWeight="Bold" FontFamily="Palatino Linotype"/>
                <Rectangle Height="1" Fill="{StaticResource GoldDim}" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Header fields -->
            <Grid Grid.Row="1" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Магазин" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                    <ComboBox x:Name="CbStore" Style="{StaticResource GoldCombo}"
                              DisplayMemberPath="Name" SelectedValuePath="StoreId"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Статус" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                    <ComboBox x:Name="CbStatus" Style="{StaticResource GoldCombo}">
                        <ComboBoxItem Content="Новый" IsSelected="True"/>
                        <ComboBoxItem Content="В обработке"/>
                        <ComboBoxItem Content="Выполнен"/>
                        <ComboBoxItem Content="Отменён"/>
                    </ComboBox>
                </StackPanel>
            </Grid>

            <!-- Add item row -->
            <Border Grid.Row="2" Background="{StaticResource BgCard}" CornerRadius="8" Padding="14,12" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock Text="ДОБАВИТЬ ПОЗИЦИЮ" Foreground="{StaticResource TextSecondary}"
                               FontSize="10" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="70"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="CbProduct" Grid.Column="0" Style="{StaticResource GoldCombo}"
                                  DisplayMemberPath="Label" SelectedValuePath="ProductId"/>
                        <TextBox x:Name="TbQty" Grid.Column="2" Style="{StaticResource GoldTextBox}"
                                 Text="1"/>
                        <Button Grid.Column="4" Content="＋ Добавить"
                                Style="{StaticResource GoldBtn}" Padding="12,8"
                                Click="BtnAddItem_Click"/>
                    </Grid>

                    <!-- Items list -->
                    <Border Margin="0,12,0,0" Background="#1A1A1A" CornerRadius="4" MinHeight="80">
                        <DataGrid x:Name="ItemsGrid" Style="{StaticResource GoldGrid}"
                                  MaxHeight="160" Margin="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Товар"   Binding="{Binding Label}"     Width="*"/>
                                <DataGridTextColumn Header="Кол-во"  Binding="{Binding Quantity}"  Width="70"/>
                                <DataGridTextColumn Header="Цена"    Binding="{Binding Price}"     Width="90"/>
                                <DataGridTextColumn Header="Итого"   Binding="{Binding Total}"     Width="90"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Total -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,16">
                <TextBlock Text="Итого: " Foreground="{StaticResource TextSecondary}" FontSize="14" VerticalAlignment="Center"/>
                <TextBlock x:Name="TbTotal" Text="0 ₽"
                           Foreground="{StaticResource GoldBrush}"
                           FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" Style="{StaticResource GhostBtn}" Width="100"
                        Click="BtnCancel_Click" Margin="0,0,10,0"/>
                <Button Content="Сохранить" Style="{StaticResource GoldBtn}" Width="100"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
