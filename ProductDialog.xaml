<Window x:Class="LancelotWPF.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Товар" Width="500" Height="560"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BgPanel}"
        WindowStyle="None" AllowsTransparency="True"
        ResizeMode="NoResize">
    <Border BorderBrush="{StaticResource GoldDim}" BorderThickness="1" CornerRadius="8">
        <Grid Margin="30,24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,22">
                <TextBlock x:Name="TbTitle" Text="Новый товар"
                           Foreground="{StaticResource GoldBrush}"
                           FontSize="18" FontWeight="Bold" FontFamily="Palatino Linotype"/>
                <Rectangle Height="1" Fill="{StaticResource GoldDim}" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Form -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <TextBlock Text="Артикул" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="TbArticle" Style="{StaticResource GoldTextBox}" Margin="0,0,0,16"/>

                    <TextBlock Text="Название" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="TbName" Style="{StaticResource GoldTextBox}" Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Бренд" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                            <ComboBox x:Name="CbBrand" Style="{StaticResource GoldCombo}"
                                      DisplayMemberPath="Name" SelectedValuePath="BrandId"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Категория" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                            <ComboBox x:Name="CbCategory" Style="{StaticResource GoldCombo}"
                                      DisplayMemberPath="Name" SelectedValuePath="CategoryId"/>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Размер" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TbSize" Style="{StaticResource GoldTextBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Цвет" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TbColor" Style="{StaticResource GoldTextBox}"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Материал" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                    <TextBox x:Name="TbMaterial" Style="{StaticResource GoldTextBox}" Margin="0,0,0,16"/>

                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Цена, ₽" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TbPrice" Style="{StaticResource GoldTextBox}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Остаток" Foreground="{StaticResource TextSecondary}" FontSize="11" Margin="0,0,0,4"/>
                            <TextBox x:Name="TbStock" Style="{StaticResource GoldTextBox}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Отмена" Style="{StaticResource GhostBtn}" Width="110"
                        Click="BtnCancel_Click" Margin="0,0,10,0"/>
                <Button Content="Сохранить" Style="{StaticResource GoldBtn}" Width="110"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
